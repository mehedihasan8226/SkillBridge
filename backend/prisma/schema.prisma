generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String @id @default(ulid())
  name     String
  email    String
  password String
  role     Role   @default(Student)

  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Tutors {
   id       String @id @default(ulid())
   qualification String
   university String 
   major_subject String
   experience_years Int
   bio String
   teaching_mode TeachingMode @default(Online)
   monthly_rate Int
   availability Json
   languages Json

}

model TutorManagement {
     id       String @id @default(ulid())
     full_name String
     email String
     phone String
     profile_image String
     gender TutorManagementGender 
     date_of_birth DateTime
     age Int
     nationality String
     address String
}


model Review {
  id         String       @id @default(ulid())
  student_id String
  tutor_id   String
  rating     Int
  comment    String
  status     ReviewStatus @default(APPROVED)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  Tutor
  Student
}

enum TeachingMode {
    Online
    Offline
    Both
}
enum TutorManagementGender {
      Male
      Female
      Other

}

enum ReviewStatus {
  APPROVED
  REJECT
}
